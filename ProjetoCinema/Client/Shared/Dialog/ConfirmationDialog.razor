@if (displayDialog)
{
    <div class="modal-backdrop show"></div>

    <div class="modal fade show" id="modalConfirmationDialog" tabindex="-1"
         role="dialog" aria-labelledby="modalDialogLabel" aria-hidden="true" style="display: block;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @Titulo
                    </h5>
                    <button @onclick="onCancel" type="button" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button @onclick="onCancel" type="button" class="btn btn-secondary">Cancelar</button>
                    <button @onclick="onConfirm" type="button" class="btn btn-primary">OK</button>
                </div>
            </div>
        </div>
    </div>

}

@code {
    private bool displayDialog = false;
    [Parameter] public string Titulo { get; set; } = "Confirma";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback onConfirm { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
    public void Show() => displayDialog = true;
    public void Hide() => displayDialog = false;
}

